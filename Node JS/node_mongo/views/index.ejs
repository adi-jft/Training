    .css {
    margin:.5rem ;
    width: 100px;
    height: 50px;
    border: none;
    outline: none;
    color: #fff;
    background: blue;
    cursor: pointer;
    position: relative;
    z-index: 0;
    border-radius: 10px;
  }
.css:before {
    content: '';
    background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
    position: absolute;
    top: -2px;
    left:-2px;
    background-size: 400%;
    z-index: -1;
    filter: blur(5px);
    width: calc(100% + 4px);
    height: calc(100% + 4px);
    animation: glowing 20s linear infinite;
    opacity: 0;
    transition: opacity .3s ease-in-out;
    border-radius: 10px;
}
.css:active {
    color: #000
}
.css:active:after {
    background: transparent;
}
.css:hover:before {
    opacity: 1;
}
.css:after {
    z-index: -1;
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    /* background: #111; */
    left: 0;
    top: 0;
    border-radius: 10px;
